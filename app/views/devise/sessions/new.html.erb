<div class="flex flex-col m-1">
  <h1 class="text-4xl">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mx-1 my-2">
      <%= f.label :email, class: 'text-gray-700 text-sm' %>
      <br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>
  
    <div class="mx-1 my-2">
      <%= f.label :password, class: 'text-gray-700 text-sm' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>

    <%= f.submit "Log in", class: 'flex-shrink m-1 px-2 py-1 bg-gray-300 rounded-md text-md text-gray text-center' %>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
