<div class="flex flex-col m-1">
  <%= form_for(board) do |f| %>
    <% if board.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>
  
        <ul>
        <% board.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mx-1 my-2">
      <%= f.label :name, class: 'text-gray-700 text-sm' %>
      <br />
      <%= f.text_field :name, class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>
  
    <div class="mx-1 my-2">
      <%= f.label :description, class: 'text-gray-700 text-sm' %>
      <br />
      <%= f.text_field :description, class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>
  
    <%= f.submit "Create", class: 'flex-shrink m-1 px-2 py-1 bg-gray-300 rounded-md text-md text-gray text-center' %>
  <% end %>
</div>