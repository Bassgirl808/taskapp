<div class="flex flex-col m-1">
  <h1 class="text-4xl">Sign up</h1>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  
    <div class="mx-1 my-2">
      <%= f.label :email, class: 'text-gray-700 text-sm' %>
      <br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>
  
    <div class="mx-1 my-2">
      <div class="flex flex-row">
        <%= f.label :password, class: 'text-gray-700 text-sm' %>
        <% if @minimum_password_length %>
          <p class="ml-1 text-gray-700 text-sm">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>
  
    <div class="mx-1 my-2">
      <%= f.label :password_confirmation, class: 'text-gray-700 text-sm' %>
      <br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'px-2 py-1 border-gray-900 border bg-gray-100 text-md text-gray-800 rounded-md' %>
    </div>
  
    <%= f.submit "Sign up", class: 'flex-shrink m-1 px-2 py-1 bg-gray-300 rounded-md text-md text-gray text-center' %>
  <% end %>
  
  <%= render "users/shared/links" %>
</div>